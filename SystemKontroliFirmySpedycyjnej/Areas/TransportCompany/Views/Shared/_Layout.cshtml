<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/themes/base/css")
</head>
<body background="~/Areas/TransportCompany/Images/car.png">
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        .menu-box {
            position: absolute;
            width: 200px;
            height: 350px;
            margin-top: 100px;
            background-color: rgb(255,235,205);
            overflow: hidden;
            z-index: 1;
        }

        .button-style {
            padding: 12px 40px;
            font-size: 16px;
            background-color: #0094ff;
            border: 3px solid #4CAF50;
        }

        .position-button {
            margin-top: 15px;
            margin-left: 10px;
            margin-right: 10px;
            margin-bottom: 15px;
        }
    </style>
    <div class="menu-box">
        <strong>Menu</strong>
        <div class="position-button">
            <button class="button-style" onclick="location.href='@Url.Action("MainWindow", "MainWindow", new { area = "TransportCompany" })'">Home</button>
        </div>
        <div class="position-button">
            <button class="button-style" onclick="location.href='@Url.Action("CompanyCars", "Cars", new { area = "TransportCompany" })'">Cars</button>
        </div>
        <div class="position-button">
            <button class="button-style" onclick="location.href='@Url.Action("EmployeeInfo", "Employee", new { area = "TransportCompany" })'">Employee</button>
        </div>
        <div class="position-button">
            <button class="button-style" onclick="location.href='@Url.Action("EmployeeInfo", "Employee", new { area = "TransportCompany" })'">Home</button>
        </div>
    </div>
    @RenderBody()
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqgrid")
    @Scripts.Render("~/bundles/jqplot")
    @Scripts.Render("~/bundles/jqmodal")
    @RenderSection("scripts", required: false)
</body>
</html>